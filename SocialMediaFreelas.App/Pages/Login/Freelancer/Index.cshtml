@page
@model SocialMediaFreelas.Pages.Login.Freelancer.LoginModel
@{
    Layout = "_LayoutCustom";
}
<style>
    body{
    background-color: #dee9ff;
}

.container {
        display: flex;
        justify-content: center;
        align-items: center;
}

.login-form{
    padding: 10vh 0;
}

.login-form form{
    background-color: #fff;
    max-width: 600px;
    margin: auto;
    padding: 50px 70px;
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;
    border-radius: 30px;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.075);

}

.login-form .form-icon{
    text-align: center;
    background-color: #5891ff;
    border-radius: 50%;
    font-size: 40px;
    color: white;
    width: 100px;
    height: 100px;
    margin: auto;
    margin-bottom: 50px;
    line-height: 100px;
}

.login-form .item{
    border-radius: 20px;
    margin-bottom: 25px;
    padding: 10px 20px;
}

.login-form .login-account{
    border-radius: 30px;
    padding: 10px 20px;
    font-size: 18px;
    font-weight: bold;
    background-color: #5791ff;
    border: none;
    color: white;
    margin-top: 20px;
}

.login-form .create-account-link{
    border-radius: 30px;
    padding: 10px 20px;
    font-size: 18px;
    font-weight: bold;
    background-color: #dee9ff;
    border: 1px solid #5791ff;
    color: #5791ff;
    text-align: center;
    display: block;
    margin-top: 20px;
    text-decoration: none;
}

.login-form .create-account-link:hover{
    background-color: #5791ff;
    color: white;
    text-decoration: none;
}

@@media (max-width: 576px) {
    .login-form form{
        padding: 50px 20px;
    }

    .login-form .form-icon{
        width: 70px;
        height: 70px;
        font-size: 30px;
        line-height: 70px;
    }
}

</style>



<div class="login-form">

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger button-danger" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

@*    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success button-success" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }*@
        <form method="post">
            <div class="form-icon">
                <span><i class="icon icon-login"></i></span>
            </div>
            <div class="form-group">
            <input type="email" asp-for="LoginInputModel.Email" class="form-control item" id="username" placeholder="Email">
            </div>
            <div class="form-group">
                <input type="password" asp-for="LoginInputModel.Senha" class="form-control item" id="password" placeholder="Senha">
            </div>
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-block login-account">
            </div>
            <div class="form-group">
                <a href="../Register" class="btn btn-block create-account-link">Cadastre-se</a>
            </div>
        </form>
    </div>


<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
