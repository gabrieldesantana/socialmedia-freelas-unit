<div class="registration-form">
    <form id="create-experience-form" method="post">
        <div class="form-icon">
            <span><i class="icon icon-briefcase"></i></span>
        </div>

        <input type="search" list="mylistFreelancers" autocomplete="off" name="FreelancerIdByString" id="inputSelectFreelancer" class="form-control">

            <datalist id="mylistFreelancers">
                <option disabled>Selecione</option>
            @if (Model.ExperienciaInputModel != null)
            {
                foreach (var freelancer in Model.ExperienciaInputModel.Freelancers)
                {
                    <option value="@freelancer.Nome">@freelancer.Id</option>
                }
            }

            </datalist>

            <div class="form-group">
                <label asp-for="ExperienciaInputModel.Projeto" class="control-label"></label>
                <input asp-for="ExperienciaInputModel.Projeto" class="form-control" />
                <span asp-validation-for="ExperienciaInputModel.Projeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExperienciaInputModel.Empresa" class="control-label"></label>
                <input asp-for="ExperienciaInputModel.Empresa" class="form-control" />
                <span asp-validation-for="ExperienciaInputModel.Empresa" class="text-danger"></span>
            </div>
        <div class="form-group">
            <label asp-for="ExperienciaInputModel.Tecnologia" class="control-label"></label>
            <input asp-for="ExperienciaInputModel.Tecnologia" class="form-control" />
            <span asp-validation-for="ExperienciaInputModel.Tecnologia" class="text-danger"></span>
        </div>
            <div class="form-group">
                <label asp-for="ExperienciaInputModel.Valor" class="control-label"></label>
                <input asp-for="ExperienciaInputModel.Valor" class="form-control" />
                <span asp-validation-for="ExperienciaInputModel.Valor" class="text-danger"></span>
            </div>
        <div class="form-group">
            <select class="form-control item" id="rating" asp-for="ExperienciaInputModel.Avaliacao" required>
                <option value="" disabled selected>Avaliação</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-block create-account">Cadastrar Experiência</button>
        </div>
    </form>
</div>

<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
