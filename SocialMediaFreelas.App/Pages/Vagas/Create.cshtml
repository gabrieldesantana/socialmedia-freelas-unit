@page
@model SocialMediaFreelas.Pages.Vagas.CreateModel
@{
    ViewData["Title"] = "Adicionar";
}

<style>

.registration-form {
    padding: 50px 0;
}

.registration-form form {
    background: #fff;
    max-width: 400px;
    margin: auto;
    padding: 30px 50px;
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;
    border-radius: 30px;
    box-shadow: 0px 2px 10px 0px #f7f7f7;
}

.registration-form .form-icon {
    text-align: center;
    background-color: #5891ff;
    border-radius: 50%;
    font-size: 40px;
    color: white;
    width: 100px;
    height: 100px;
    margin: auto;
    margin-bottom: 50px;
    line-height: 100px;
}

.registration-form .form-group {
    margin-bottom: 20px;
}

.registration-form .form-control {
    border: 2px solid #d7d7d7;
    border-radius: 0;
    box-shadow: none;
    font-size: 14px;
    height: 40px;
}

.registration-form .form-control:focus {
    border-color: #5891ff;
    box-shadow: 0 0 8px 0 #5891ff;
}

.registration-form .create-account {
    background: #5891ff;
    border: none;
    border-radius: 30px;
    color: white;
    font-weight: bold;
    margin-top: 20px;
    padding: 10px;
    cursor: pointer;
}

.registration-form .create-account:hover {
    background: #4478e3;
}

#textArea {
    width: 100%;
    height: 60px;
    padding: 12px 20px;
    box-sizing: border-box;
    border: 2px solid #ccc;
    border-radius: 4px;
    font-size: 14px;
    resize: none;
}

#footer {
    display: none !important;
}

</style>

  <div class="registration-form">
        <form method="post">
            <div class="form-icon">
                <span><i class="icon icon-briefcase"></i></span>
            </div>
            @* <h2 class="text-center">Criar Vaga</h2> *@

            <div class="form-group classe">

                <input type="hidden" value="@Model.VagaInputModel.ClienteId" asp-for="VagaInputModel.ClienteId" class="form-control" />


            <div class="form-group">
                <input asp-for="VagaInputModel.Titulo" class="form-control item" placeholder="Título da Vaga"/>
                <span asp-validation-for="VagaInputModel.Titulo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="VagaInputModel.Cargo" class="form-control item" placeholder="Cargo" />
                <span asp-validation-for="VagaInputModel.Cargo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select class="form-control item" asp-for="VagaInputModel.Tipo" required>
                    <option value="" disabled selected>Tipo da Vaga</option>
                    <option value="Integral">Tempo Integral</option>
                    <option value="Meio Periodo">Meio Período</option>
                </select>
            </div>

            <div class="form-group">
                <input asp-for="VagaInputModel.Localizacao" class="form-control item" placeholder="Localização" />
                <span asp-validation-for="VagaInputModel.Localizacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Remuneração (R$)</label>
                <input asp-for="VagaInputModel.Remuneracao" class="form-control item" />
                <span asp-validation-for="VagaInputModel.Remuneracao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <textarea type="text" asp-for="VagaInputModel.Descricao" class="form-control item" id="textArea" placeholder="Descrição da Vaga" rows="10"></textarea>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-block create-account" value="Criar Vaga">
            </div>
        </form>
    </div>


