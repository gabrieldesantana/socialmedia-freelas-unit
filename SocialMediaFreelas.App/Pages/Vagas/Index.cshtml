<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<style>

    <style >
    .custom-card {
        width: 50% !important; /* Aumentar o tamanho do card */
        min-height: 300px;
        
    }

    .custom-card .card-title {
        font-size: 3rem; /* Tamanho da fonte para o título do card */
    }

    .custom-card .card-text {
        font-size: 1.25rem; /* Tamanho da fonte para o texto do card */
    }

    .custom-card .btn {
        font-size: 1.5rem; /* Tamanho da fonte para o botão */
    }

    .custom-card .fa-whatsapp {
