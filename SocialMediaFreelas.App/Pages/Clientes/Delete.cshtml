@page "{id:int?}"
@model SocialMediaFreelas.Pages.Clientes.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #edf2f6 !important;
        font-family: Arial, sans-serif !important;
    }

    .profile-container {
        display: flex !important;
        justify-content: center !important;
        align-items: flex-start !important;
        padding: 20px !important;
    }

    .profile-sidebar, .profile-form {
        background-color: #fff !important;
        padding: 20px !important;
        border-radius: 10px !important;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1) !important;
    }

    .profile-sidebar {
        margin-right: 20px !important;
        text-align: center !important;
    }

    .profile-sidebar img {
        border-radius: 50% !important;
        width: 150px !important;
        height: 150px !important;
    }

    .profile-sidebar h2 {
        font-size: 24px !important;
        margin: 10px 0 !important;
    }

    .profile-sidebar p {
        color: #777 !important;
    }

    .profile-sidebar button {
        background-color: #dc3545 !important;
        color: #fff !important;
        border: none !important;
        padding: 10px 20px !important;
        margin-top: 10px !important;
        cursor: pointer !important;
    }

    .profile-form {
        flex: 1 !important;
        max-width: 600px !important;
    }

    .profile-form h3 {
        margin-bottom: 20px !important;
        font-size: 24px !important;
    }

    .profile-form .form-group {
        margin-bottom: 15px !important;
    }

    .profile-form label {
        display: block !important;
        margin-bottom: 5px !important;
    }

    .profile-form input, .profile-form select {
        width: 100% !important;
        padding: 10px !important;
        border: 1px solid #ccc !important;
        border-radius: 5px !important;
    }

    .profile-form button {
        background-color: #dc3545 !important; /* Color changed to match delete button */
        color: #fff !important;
        border: none !important;
        padding: 10px 20px !important;
        cursor: pointer !important;
    }


</style>

<div class="profile-container">
    <div class="profile-sidebar">
          <div class="form-icon">
            <span><i class="icon icon-minus"></i></span>
        </div>
        <h2>Excluir perfil</h2>
    </div>
    <div class="profile-form">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ClienteViewModel.Id"/>

            <div class="form-group">
                <label asp-for="ClienteViewModel.NumeroDocumento" class="control-label"></label>
                <input asp-for="ClienteViewModel.NumeroDocumento" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="ClienteViewModel.Nome" class="control-label"></label>
                <input asp-for="ClienteViewModel.Nome" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="ClienteViewModel.DataNascimento" class="control-label"></label>
                <input asp-for="ClienteViewModel.DataNascimento" type="date" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="ClienteViewModel.Email" class="control-label"></label>
                <input asp-for="ClienteViewModel.Email" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="ClienteViewModel.Telefone" class="control-label"></label>
                <input asp-for="ClienteViewModel.Telefone" class="form-control" disabled />
            </div>

            <div style="display: flex; justify-content: space-between;">
                <div class="form-group">
                    <a asp-page="Index" class="btn btn-secondary">Voltar</a>
                </div>

                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
