@page "{id:int?}"
@model SocialMediaFreelas.Pages.Freelancers.EditModel
@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-color: #edf2f6 !important;
        font-family: Arial, sans-serif !important;
    }

    .profile-container {
        display: flex !important;
        justify-content: center !important;
        align-items: flex-start !important;
        padding: 20px !important;
    }

    .profile-sidebar, .profile-form {
        background-color: #fff !important;
        padding: 20px !important;
        border-radius: 10px !important;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1) !important;
    }

    .profile-sidebar {
        margin-right: 20px !important;
        text-align: center !important;
    }

    .profile-sidebar img {
        border-radius: 50% !important;
        width: 150px !important;
        height: 150px !important;
    }

    .profile-sidebar h2 {
        font-size: 24px !important;
        margin: 10px 0 !important;
    }

    .profile-sidebar p {
        color: #777 !important;
    }

    .profile-sidebar button {
        background-color: #dc3545 !important;
        color: #fff !important;
        border: none !important;
        padding: 10px 20px !important;
        margin-top: 10px !important;
        cursor: pointer !important;
    }

    .profile-form {
        flex: 1 !important;
        max-width: 600px !important;
    }

    .profile-form h3 {
        margin-bottom: 20px !important;
        font-size: 24px !important;
    }

    .profile-form .form-group {
        margin-bottom: 15px !important;
    }

    .profile-form label {
        display: block !important;
        margin-bottom: 5px !important;
    }

    .profile-form input, .profile-form select {
        width: 100% !important;
        padding: 10px !important;
        border: 1px solid #ccc !important;
        border-radius: 5px !important;
    }

    .profile-form button {
        background-color: #28a745 !important;
        color: #fff !important;
        border: none !important;
        padding: 10px 20px !important;
        cursor: pointer !important;
    }

.form-icon {
    text-align: center;
    background-color: #5891ff;
    border-radius: 50%;
    font-size: 40px;
    color: white;
    width: 100px;
    height: 100px;
    margin: auto;
    margin-bottom: 50px;
    line-height: 100px;
}

</style>

<div class="profile-container">
    <div class="profile-sidebar">
        <div class="form-icon">
            <span><i class="icon icon-note"></i></span>
        </div>
        <h2>Editar perfil</h2>
    </div>

    <div class="profile-form">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="FreelancerUpdateModel.Id" />

            <div class="form-group">
                <label asp-for="FreelancerUpdateModel.NumeroDocumento" class="control-label"></label>
                <input asp-for="FreelancerUpdateModel.NumeroDocumento" class="form-control" />
                <span asp-validation-for="FreelancerUpdateModel.NumeroDocumento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FreelancerUpdateModel.Nome" class="control-label"></label>
                <input asp-for="FreelancerUpdateModel.Nome" class="form-control" />
                <span asp-validation-for="FreelancerUpdateModel.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FreelancerUpdateModel.DataNascimento" class="control-label"></label>
                <input asp-for="FreelancerUpdateModel.DataNascimento" type="date" class="form-control" />
                <span asp-validation-for="FreelancerUpdateModel.DataNascimento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FreelancerUpdateModel.Email" class="control-label"></label>
                <input asp-for="FreelancerUpdateModel.Email" class="form-control" />
                <span asp-validation-for="FreelancerUpdateModel.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FreelancerUpdateModel.Telefone" class="control-label"></label>
                <input asp-for="FreelancerUpdateModel.Telefone" class="form-control" />
                <span asp-validation-for="FreelancerUpdateModel.Telefone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FreelancerUpdateModel.PretensaoSalarial" class="control-label"></label>
                <input asp-for="FreelancerUpdateModel.PretensaoSalarial" class="form-control" />
                <span asp-validation-for="FreelancerUpdateModel.PretensaoSalarial" class="text-danger"></span>
            </div>

            <div style="display: flex; justify-content: space-between;">
                <div class="form-group">
                    <a asp-page="Index" class="btn btn-secondary">Voltar</a>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Editar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
